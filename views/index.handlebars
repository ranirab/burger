<div class="container text-center">

<div class="jumbotron">
  
  <h1 class="display-3">Eat Da-Burgers!</h1>
  
  {{!-- <img src="../assets/images/burger.jpg" alt="burger" align="center" height="200" width="300"> --}}
 
  <iframe src="https://giphy.com/embed/IgOEWPOgK6uVa" align="center" width="480" height="245" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/life-up-IgOEWPOgK6uVa">via GIPHY</a></p>

</div>
</div>
<div class = "container"></div>
 <div class = "row"></div>
<div class = "col-lg-6"> 
<h2>New Burgers Ready to Eat!</h2>
<ul>
  {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devour=true}} {{/unless}} {{/each}}
</ul>
 </div>
<div class= "col-lg-6">
<h2>Burgers that are devoured!</h2>
<ul>
  {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devour=false}} {{/if}} {{/each}}
</ul>
</div>
</div>
<div class= "row">
  <div class = "col-lg-3"></div>
<div class = "col-lg-6">
<h2>Add a Burger to eat.</h2>
<form class="create-form">
  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div> 
  <button type="submit">Add Burger</button>
</form>
</div>
<div class = "col-lg-3"></div>
</div>
</div> 